# Telegram API credentials (get from https://my.telegram.org/)
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Channel to monitor for alerts
CHANNEL_ID=@your_channel_here 

# User ID to call when alert is detected
CALL_USER_ID=your_friend_user_id_here

# City to monitor (e.g., Kyiv)
MONITORED_CITY=Kyiv

# OpenAI API key for AI threat analysis
OPENAI_API_KEY=your_openai_api_key_here

# Keywords to search for in posts (comma-separated)
# Examples: тривога,ракета,повітряна,загроза,alert,missile
KEYWORDS=тривога,ракета,повітряна

# Call settings
CALL_MAX_RETRIES=3
CALL_RETRY_INTERVAL=120000
CALL_TIMEOUT=40000

# Check interval in milliseconds (60000 = 1 minute)
CHECK_INTERVAL=60000